<header class="font">
  <nav class="flex flex-wrap items-center justify-between px-3 py-3 text-gray-100 mainbg lg:px-10 " >
    <div class="flex items-center mr-6 flex-no-shrink">
      <%= link_to "สนามพระ", root_path, class:"link text-2xl tracking-tight font-semibold " %>
    </div>
    <div class="block lg:hidden">
      <button class="flex items-center px-3 py-2 border border-gray-500 rounded text-grey hover:text-gray-600 hover:border-gray-600">
        <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="items-center block w-full text-center text-xl  lg:flex-1 lg:flex lg:text-left">

      <div class="items-center block w-full mt-2 text-center lg:flex lg:flex-row lg:flex-1 lg:mt-0 lg:text-left lg:justify-end">

        <%= link_to "หน้าแรก", "/", class: "isactive nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <%= link_to "สนามพระ ", "#", class: "nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <%= link_to "เกี่ยวกับเรา ", "#", class: "nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>

        <% if user_signed_in? %>
          <%= link_to "ชื่อคนที่ login", edit_user_registration_path, class: "nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <% else %>
          <%= link_to "เข้าสู่ระบบ", new_user_session_path, class:"nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
          <%= link_to "สมัครสมาชิก", new_user_registration_path, class:"nav block mt-4 lg:inline-block lgLmt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
