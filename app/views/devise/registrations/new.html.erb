<% content_for :devise_form do %>
<div class="font">
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">สมัครเข้าใช้งาน</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-group">
      <%= f.label :ชื่อ, class:"label" %>
      <%= f.text_field :name, class:"input" %>
    </div>

    <div class="input-group">
      <%= f.label :data_json, class:"label" %>
      <%= f.text_field :data_json, class:"input" %>
    </div>

    <div class="input-group">
      <%= f.label :อีเมลล์, class:"label" %>
      <%= f.email_field :email, autocomplete: "email", class:"input" %>
    </div>

    <div class="input-group">
      <div class="flex">
        <%= f.label :รหัสผ่าน, class: "label" %>
        <% if @minimum_password_length %>
          <span class="pl-1 text-xs text-grey-dark"><em>(<%= @minimum_password_length %> ตัวอักษรเป็นอย่างต่ำ)</em></span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.label :ยืนยันรหัสผ่าน, class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.submit "สมัครเข้าใช้งาน", class: "btn btn-default" %>
    </div>

    <hr class="mt-6 border" />

  <% end %>

  <%= render "devise/shared/links" %>

<% end %>

<%= render "devise/shared/form_wrap" %>
</div>